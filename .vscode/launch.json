    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch crawler",
            "preLaunchTask": "tsc: build crawler",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/crawler/build/index.js",
            "outFiles": [
                "${workspaceFolder}/crawler/**/*.js"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/crawler/.env"
        }
    ]
}